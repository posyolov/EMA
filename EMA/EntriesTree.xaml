                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:local="clr-namespace:EMA" >

    <ControlTemplate x:Key="EntriesTree">
        <ControlTemplate.Resources>
            <Style x:Key="textMargin">
                <Setter Property="Control.Margin" Value="10 0"/>
            </Style>
        </ControlTemplate.Resources>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <ListView BorderThickness="0" Grid.Row="0">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Header="OccurDateTime" x:Name="OccurDateTimeColW" Width="150"/>
                            <GridViewColumn Header="Position" x:Name="PositionColW" Width="150"/>
                            <GridViewColumn Header="Title" x:Name="TitleColW" Width="150"/>
                            <GridViewColumn Header="Reason" x:Name="ReasonColW" Width="150"/>
                            <GridViewColumn Header="ContinuationCriteria" x:Name="ContinuationCriteriaColW" Width="150"/>
                            <GridViewColumn Header="Priority" x:Name="PriorityColW" Width="150"/>
                            <GridViewColumn Header="PlannedStartDate" x:Name="PlannedStartDateColW" Width="150"/>
                            <GridViewColumn Header="EstimatedResources" x:Name="EstimatedResourcesColW" Width="150"/>
                            <GridViewColumn Header="IsFinal" x:Name="IsFinalColW" Width="50"/>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
            
