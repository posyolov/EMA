<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:EMA">

    <ControlTemplate x:Key="EntriesTree">
        <ControlTemplate.Resources>
            <Style x:Key="textMargin">
                <Setter Property="Control.Margin" Value="10 0"/>
            </Style>
            <x:Array Type="sys:Boolean" x:Key="BoolList">
                <sys:Boolean>False</sys:Boolean>
                <sys:Boolean>True</sys:Boolean>
            </x:Array>
        </ControlTemplate.Resources>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <ListView BorderThickness="0" Grid.Row="0">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>

                            <GridViewColumn x:Name="OccurDateTimeColumn" Width="150">
                                <GridViewColumnHeader HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Top">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                           Margin="5" HorizontalAlignment="Center"
                                           Text="OccurDateTime"/>
                                        <CheckBox Grid.Row="1" Grid.Column="0"
                                            VerticalAlignment="Center"
                                            IsChecked="{Binding ItemsFilter.OccurDateTime.FilterEnable}"/>
                                        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
                                            <TextBox Text="{Binding ItemsFilter.OccurDateTime.FilterValue, UpdateSourceTrigger=PropertyChanged, ConverterCulture=ru}"/>
                                            <TextBox Text="{Binding ItemsFilter.OccurDateTime.FilterValueTo, UpdateSourceTrigger=PropertyChanged, ConverterCulture=ru}"/>
                                        </StackPanel>
                                    </Grid>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn x:Name="PositionColumn" Width="100">
                                <GridViewColumnHeader HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Top">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                           Margin="5"
                                           HorizontalAlignment="Center"
                                           Text="Position"/>
                                        <CheckBox Grid.Row="1" Grid.Column="0"
                                            VerticalAlignment="Center"
                                            IsChecked="{Binding ItemsFilter.PositionName.FilterEnable}"/>
                                        <TextBox Grid.Row="1" Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Text="{Binding ItemsFilter.PositionName.FilterValue, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn x:Name="ReasonColumn" Width="300">
                                <GridViewColumnHeader HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Top">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                           Margin="5"
                                           HorizontalAlignment="Center"
                                           Text="Reason"/>
                                        <CheckBox Grid.Row="1" Grid.Column="0"
                                            VerticalAlignment="Center"
                                            IsChecked="{Binding ItemsFilter.ReasonId.FilterEnable}"/>
                                        <ComboBox Grid.Row="1" Grid.Column="1"
                                                  VerticalAlignment="Center"
                                                  ItemsSource="{Binding EntriesManager.RelationEntities[2]}"
                                                  DisplayMemberPath="Title"
                                                  SelectedValuePath="Id"
                                                  SelectedValue="{Binding ItemsFilter.ReasonId.FilterValue}"/>
                                    </Grid>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn x:Name="TitleColumn" Width="300">
                                <GridViewColumnHeader HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Top">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                           Margin="5"
                                           HorizontalAlignment="Center"
                                           Text="Title"/>
                                        <CheckBox Grid.Row="1" Grid.Column="0"
                                            VerticalAlignment="Center"
                                            IsChecked="{Binding ItemsFilter.Title.FilterEnable}"/>
                                        <TextBox Grid.Row="1" Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Text="{Binding ItemsFilter.Title.FilterValue, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn Header="ContinuationCriteria" x:Name="ContinuationCriteriaColumn" Width="150"/>
                            <GridViewColumn Header="Priority" x:Name="PriorityColumn" Width="150"/>
                            <GridViewColumn Header="PlannedStartDate" x:Name="PlannedStartDateColumn" Width="150"/>
                            <GridViewColumn Header="EstimatedResources" x:Name="EstimatedResourcesColumn" Width="150"/>

                            <GridViewColumn x:Name="IsCompleteColumn" Width="80">
                                <GridViewColumnHeader HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Top">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                           Margin="5"
                                           HorizontalAlignment="Center"
                                           Text="IsComplete"/>
                                        <CheckBox Grid.Row="1" Grid.Column="0"
                                            VerticalAlignment="Center"
                                            IsChecked="{Binding ItemsFilter.IsCopmlete.FilterEnable}"/>
                                        <ComboBox Grid.Row="1" Grid.Column="1"
                                                  VerticalAlignment="Center"
                                                  ItemsSource="{StaticResource BoolList}"
                                                  SelectedValue="{Binding ItemsFilter.IsCopmlete.FilterValue}"/>

                                    </Grid>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>

