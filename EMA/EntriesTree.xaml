            <TreeView ItemsSource="{Binding EntriesTreeFiltered}"
                      BorderThickness="0"
                      Grid.Row="1">

                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="True" />
                    </Style>
                </TreeView.ItemContainerStyle>

                <i:Interaction.Behaviors>
                    <local:TreeViewSelectedItemBehavior SelectedItem="{Binding SelectedItem}" />
                </i:Interaction.Behaviors>

                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children, Mode=OneWay}">
                        <Grid>
                            <Grid.Resources>
                                <Style x:Key="fontStyle">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Parent}" Value="{x:Null}">
                                            <Setter Property="Control.FontWeight" Value="DemiBold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                                <Style x:Key="childrenVisibility" TargetType="CheckBox">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Parent}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=OccurDateTimeColumn}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=PositionColumn}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=TitleColumn}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=ReasonColumn}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=ContinuationCriteriaColumn}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=PriorityColumn}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=PlannedStartDateColumn}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=EstimatedResourcesColumn}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=IsCompleteColumn}"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="{Binding OccurDateTime, ConverterCulture=ru}"
                                       Style="{StaticResource fontStyle}"/>
                            <!--FontSize="{Binding Children, Converter={StaticResource objectToFontConverter}}"/>-->
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding Position.Name}" 
                                       Style="{StaticResource fontStyle}"/>
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding Reason.Title}" 
                                       Style="{StaticResource fontStyle}"/>
                            <TextBlock Grid.Column="3" 
                                       Text="{Binding Title}" 
                                       Style="{StaticResource fontStyle}"/>
                            <TextBlock Grid.Column="4" 
                                       Text="{Binding ContinuationCriteria.Title}" 
                                       Style="{StaticResource fontStyle}"/>
                            <TextBlock Grid.Column="5" 
                                       Text="{Binding Priority}" 
                                       Style="{StaticResource fontStyle}"/>
                            <TextBlock Grid.Column="6" 
                                       Text="{Binding PlannedStartDate, ConverterCulture=ru}" 
                                       Style="{StaticResource fontStyle}"/>
                            <TextBlock Grid.Column="7" 
                                       Text="{Binding EstimatedResources}" 
                                       Style="{StaticResource fontStyle}"/>
                            <CheckBox Grid.Column="8" 
                                      IsChecked="{Binding IsComplete}"
                                      Style="{StaticResource childrenVisibility}"
                                      VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False"/>
                        </Grid>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>

                <TreeView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Create"
                                  Command="{Binding ShowAddEntryCommand}"/>
                        <Separator/>
                        <MenuItem Header="Add child"
                                  Command="{Binding ShowAddChildEntryCommand}"/>
                        <MenuItem Header="Edit"
                                  Command="{Binding ShowEditEntryCommand}"/>
                        <MenuItem Header="Delete"
                                  Command="{Binding ShowDeleteEntryCommand}"/>
                    </ContextMenu>
                </TreeView.ContextMenu>
            </TreeView>

        </Grid>


    </ControlTemplate>

</ResourceDictionary>