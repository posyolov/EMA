            <TreeView ItemsSource="{Binding EntriesTree}"
                      BorderThickness="0"
                      Grid.Row="1">

                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children, Mode=OneWay}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=OccurDateTimeColW}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=PositionColW}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=TitleColW}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=ReasonColW}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=ContinuationCriteriaColW}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=PriorityColW}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=PlannedStartDateColW}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=EstimatedResourcesColW}"/>
                                <ColumnDefinition Width="{Binding Path=Width, Mode=OneWay, ElementName=IsFinalColW}"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding OccurDateTime, ConverterCulture=ru}"/>
                            <TextBlock Grid.Column="1" Text="{Binding Position.Name, Converter={StaticResource positionNameConverter}}" Style="{StaticResource textMargin}"/>
                            <TextBlock Grid.Column="2" Text="{Binding Title}" Style="{StaticResource textMargin}"/>
                            <TextBlock Grid.Column="3" Text="{Binding Reason.Title}" Style="{StaticResource textMargin}"/>
                            <TextBlock Grid.Column="4" Text="{Binding ContinuationCriteria.Title}" Style="{StaticResource textMargin}"/>
                            <TextBlock Grid.Column="5" Text="{Binding Priority}" Style="{StaticResource textMargin}"/>
                            <TextBlock Grid.Column="6" Text="{Binding PlannedStartDate, ConverterCulture=ru}" Style="{StaticResource textMargin}"/>
                            <TextBlock Grid.Column="7" Text="{Binding EstimatedResources}" Style="{StaticResource textMargin}"/>
                            <CheckBox Grid.Column="8" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False" IsChecked="{Binding IsFinal}" Style="{StaticResource textMargin}"/>
                        </Grid>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>

            </TreeView>

        </Grid>


    </ControlTemplate>

